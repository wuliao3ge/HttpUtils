<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <Button
        android:id="@+id/btn_rx_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rx+retrofit：统一api方案"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/btn_rx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rx+retrofit绝对封装"/>


    <Button
        android:id="@+id/btn_rx_uploade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rx+retrofit上传"
        android:visibility="visible"
        />




    <Button
        android:id="@+id/btn_rx_mu_fr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fragment"/>

    <Button
        android:id="@+id/btn_rx_mu_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/btn_rx_mu_down_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停"
        android:visibility="visible"
        />

    <com.daimajia.numberprogressbar.NumberProgressBar
        android:id="@+id/number_progress_bar"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:progress_text_size="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
    />


    <TextView
        android:id="@+id/tv_msg"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</LinearLayout>
